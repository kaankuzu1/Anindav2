FROM node:20-slim

RUN corepack enable && corepack prepare pnpm@8.15.0 --activate

WORKDIR /app

COPY . .

RUN pnpm install --frozen-lockfile

RUN pnpm --filter @aninda/shared build && \
    pnpm --filter @aninda/database build && \
    pnpm --filter @aninda/web build

EXPOSE 3000

CMD ["pnpm", "--filter", "@aninda/web", "start"]
